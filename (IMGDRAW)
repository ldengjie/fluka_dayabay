*general
      CHARACTER*16 FILNAM
      CHARACTER*8 MRGNAM
      CHARACTER*8 NRGNAM
      INTEGER EvtID
      INTEGER NowVol
      INTEGER NextSeedNum
      DOUBLE PRECISION ,DIMENSION(3) ::USDP
      INTEGER USDVol
*muon
      INTEGER NeuNum,IsoNum,MuCharge,IEMPTY
      DOUBLE PRECISION :: MuInitT, MuInitE,OwsLen,
     &IwsLen,LsLen,GdLen,MoLen
      DOUBLE PRECISION,DIMENSION(3) ::MuInitP,MuInitTP
      DOUBLE PRECISION,DIMENSION(3) ::
     &OwsInitP,IwsInitP,MoInitP,LsInitP,GdInitP

*neutron
      PARAMETER ( MxNeuN = 10000)
      DOUBLE PRECISION,DIMENSION(MxNeuN) :: NeuInitT, NeuInitE
      DOUBLE PRECISION,DIMENSION(MxNeuN) ::NeuGamaE,NeuCapT,NeuMaE
      DOUBLE PRECISION,DIMENSION(MxNeuN,3) ::NeuInitP,NeuCapP
      INTEGER ,DIMENSION(MxNeuN)::NeuMaID,NeuType,NeuGamaN,
     &NeuCapVm,NeuCapTn,NeuInitVm
      DOUBLE PRECISION :: MaxNeuE


*save
      COMMON / IMGDRAW / 
     &          NeuNum,IsoNum,MuCharge,EvtID,
     &          MuInitT, MuInitE,MuInitP,MuInitTP,
     &          OwsInitP,IwsInitP,MoInitP,LsInitP,GdInitP,
     &          USDP,OwsLen,IwsLen,LsLen,GdLen,MoLen,
     &          NeuInitT, NeuInitE,NeuInitP,NeuCapP,NeuGamaN,
     &          NeuCapT,NeuGamaE,NeuMaE,
     &          NeuMaID,NeuType,NeuCapVm,NeuCapTn,MaxNeuE,NeuInitVm,
     &          FILNAM,MRGNAM,NRGNAM,NextSeedNum,NowVol,USDVol
      SAVE / IMGDRAW /
